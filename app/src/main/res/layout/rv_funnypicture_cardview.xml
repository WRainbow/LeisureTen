<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.srainbow.leisureten.widget.RectangleImageView
            android:id="@+id/funnypicture_rv_rectiv"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
        <TextView
            android:id="@+id/funnypicture_rv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/funnypicture_rv_rectiv"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:padding="5dp"/>
        <include
            android:id="@+id/funnypicture_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_collection_download"
            android:layout_below="@id/funnypicture_rv_tv"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>